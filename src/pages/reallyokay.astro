---
import Layout from '../layouts/Layout.astro';
---

<Layout title="A celebration of the weird people whom follow me, and I am fine with">
	<main>
    <!--[if lt IE 7]>
    <p class="browsehappy">
        You are using an <strong>outdated</strong> browser. Please
        <a href="#">upgrade your browser</a> to improve your experience.
    </p>
    <![endif]-->
    <div class="content">
    <h1 id="title">A celebration of my friends that follow me!</h1>
    	<h2>You are so nice! <i class="fa-thin fa-user-hair-mullet fa-bounce"></i></h2>
    	<p class="hidden">
        	If you can see this, then the gradient is probably broken. Sorry about that!
        <i class="fa-sharp fa-thin fa-face-pensive"></i>
    	</p>
        <h3><i class="fa-thin fa-user-hair-mullet fa-spin"></i>Let us Celebrate them!<i class="fa-thin fa-user-hair-mullet fa-spin fa-spin-reverse"></i></h3>

        <div id="carouselExampleIndicators" class="carousel slide">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="5" aria-label="Slide 6"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/public/img/yayalso/F1.PNG"/>
              </div>
              <div class="carousel-item">
                <img src="/public/img/yayalso/F2.PNG"/>
              </div>
              <div class="carousel-item">
                <img src="/public/img/yayalso/F3.PNG"/>
              </div>
              <div class="carousel-item">
                <img src="/public/img/yayalso/F4.PNG"/>
              </div>
              <div class="carousel-item">
                <img src="/public/img/yayalso/F5.PNG"/>
              </div>
              <div class="carousel-item">
                <img src="/public/img/yayalso/F6.PNG"/>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
    </div>
	</main>
</Layout>
